<%- include('./layout/header.ejs'); %>

<section id="home" class="main-single-post parallax-section">
     <div class="overlay"></div>
     <div class="container">
          <div class="row">


          </div>
     </div>
</section>

<!-- Blog Single Post Section -->

<section id="blog-single-post">
     <div class="container">
          <div class="row">

               <div class="col-md-offset-1 col-md-10 col-sm-12">
                    <div class="blog-single-post-thumb">
                         

                         <div class="blog-post-title">
                              <h2><%= blog.title %></a></h2>
                         </div>

                         <div class="blog-post-format">
                              <span><a href="#"><img src="../images/author-image1.jpg" class="img-responsive img-circle"><%= blog.user %></a></span>
                              <span><i class="fa fa-date"></i><%= blog.date %></span>
                              <span><a href="#"><i class="fa fa-comment-o"></i> 124 Comments</a></span>
                         </div>

                         <div class="blog-post-des">
                              <p></p>
                              <blockquote><%= blog.desTitle %> </blockquote>
                        
                              <p><%= blog.description %></p>
                              <div class="blog-post-image">
                              <img src="../photos/<%= blog.blogPhoto %>" class="img-responsive" alt="Blog Image 3">
                         </div>
                              
                         </div>
                       
                         
                         

                        <br><br>
                        

                         <div class="blog-comment-form">
                              <h3>Leave a Comment</h3>
                                   <form action="#" method="post">
                           	 	 	 	<input type="text" class="form-control" placeholder="Name" name="name" required>
                                        <input type="email" class="form-control" placeholder="Email" name="email" required>
                                        <textarea name="message" rows="5" class="form-control" id="message" placeholder="Message" message="message" required="required"></textarea>
                                        <div class="col-md-3 col-sm-4">
                                             <input name="submit" type="submit" class="form-control" id="submit" value="Post Your Comment">
                                        </div>
                                   </form>
                         </div>
                    </div>
          </div>
     </div>
</section>

<!-- Footer Section -->
<%- include('./layout/footer.ejs'); %>
